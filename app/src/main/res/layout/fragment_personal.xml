<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="android.view.View"/>
        <variable
            name="personalVm"
            type="com.zoe.wan.android.example.fragment.personal.FragPersonalViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/teal_700"
            android:orientation="vertical"
            android:gravity="center
">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/personHead"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/personalUsername"
                android:text="@{personalVm.username}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                tools:text="Jetto"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/personalCollect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:background="@drawable/shape_setting_bg"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginVertical="@dimen/dp_6"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的收藏"
                android:gravity="center|start"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/img_arrow_right"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/checkUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:background="@drawable/shape_setting_bg"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginVertical="@dimen/dp_6"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="检查更新"
                android:gravity="center|start"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/img_arrow_right"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:background="@drawable/shape_setting_bg"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginVertical="@dimen/dp_6"
            android:gravity="center">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关于我们"
                android:gravity="center|start"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/img_arrow_right"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="@{personalVm.showLogoutBtn==true?View.VISIBLE:View.GONE}"
            android:id="@+id/personalLogout"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_80"
            android:background="@color/teal_700"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>

